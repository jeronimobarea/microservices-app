# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
GET     /dbInit                     controllers.HomeController.dbInit

# API Notifications
+nocsrf
GET         /api/notifications         controllers.NotificationController.getNotifications
+nocsrf
GET         /api/notifications/:id     controllers.NotificationController.getNotification(id: String)
+nocsrf
POST        /api/notifications         controllers.NotificationController.createNotification
+nocsrf
PATCH       /api/notifications/:id     controllers.NotificationController.updateMovie(id: String)
+nocsrf
DELETE      /api/notifications/:id     controllers.NotificationController.deleteNotification(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
